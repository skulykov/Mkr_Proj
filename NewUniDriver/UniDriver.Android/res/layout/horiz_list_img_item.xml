<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res/cheesebaron.horizontallistview.droid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundGrey">
    <ImageView
        android:id="@+id/horizImageItem"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:paddingRight="0dp" />
    <FrameLayout
        android:layout_width="120.0dp"
        android:layout_height="160.0dp"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:id="@+id/horizVideoFrameLayout">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/horizVideoThumNail" />
    </FrameLayout>
</RelativeLayout>


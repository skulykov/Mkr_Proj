<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/back_btn_id"
        android:background="@drawable/action_item_bkg_transparent"
        android:src="@drawable/back_white_32"
        android:layout_width="48dp"
        android:layout_height="48dp"
       android:onClick="ABBackBtn"
        android:layout_gravity="center_vertical|center_horizontal" />
<!--- android:layout_gravity="center_horizontal"  android:layout_centerInParent="true" android:drawableTop="@drawable/back_white_32" -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="60dip"
       android:layout_weight="1"
        android:layout_marginLeft="10dp"
        >
    <!---   android:layout_weight="1" make a trick if you want this LL to fill all available space -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
               
                android:id="@+id/bar_title_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                android:textSize="18dp"
                android:text="AAA"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold" />
           
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


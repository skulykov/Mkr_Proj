<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
     <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:gravity="top">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/backgroundGrey">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundGrey"
            android:padding="15dip"
            android:stretchColumns="1">
            <TableRow
                android:layout_marginBottom="10dip"
                android:background="@drawable/my_profile_rounded_edittext">
                <TextView
                    style="@style/BoldText"
                    android:padding="7dip"
                    android:text="Vehicle Name" />
                <EditText
                    android:id="@+id/veh_name_id"
                    style="@style/VehEditText"
                    android:singleLine="true" />
            <!-- style="@style/DetailRightText" android:gravity="right"-->
            </TableRow>
            <TableRow
                android:layout_marginBottom="0dip"
                android:background="@drawable/my_profile_multitext_top">
                <TextView
                    style="@style/BoldText"
                    android:padding="7dip"
                    android:text="Vehicle Description" />
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dip"
                android:background="@drawable/my_profile_multitext_bottom">
                <EditText
                    android:id="@+id/veh_desc_id"
                    android:layout_weight="1"
                    android:layout_span="2"
                    style="@style/VehEditText"
                    android:padding="7dip" />
            <!-- android:gravity="right"-->
            </TableRow>
            <TableRow
                android:background="@drawable/my_profile_multitext_top">
                <TextView
                    style="@style/BoldText"
                    android:layout_span="2"
                    android:padding="7dip"
                    android:text="License Plate" />
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dip"
                android:background="@drawable/my_profile_multitext_bottom">
                <EditText
                    android:id="@+id/veh_lic_plate_id"
                    android:layout_span="2"
                    android:layout_weight="1"
                    android:padding="7dip"
                    style="@style/VehEditText" />
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dip"
                android:background="@drawable/my_profile_rounded_edittext">
                <TextView
                    style="@style/BoldText"
                    android:padding="7dip"
                    android:text="License Province" />
                <EditText
                    android:id="@+id/veh_lic_prov_id"
                    android:gravity="right"
                    android:padding="7dip"
                    android:singleLine="true"
                    style="@style/VehEditText" />
            </TableRow>
        <!-- Weight  -->
            <TableRow
                android:layout_marginBottom="10dip"
                android:background="@drawable/my_profile_rounded_edittext">
                <TextView
                    style="@style/BoldText"
                    android:padding="7dip"
                    android:text="Vehicle weight" />
                <EditText
                    android:id="@+id/veh_weight_id"
                    android:gravity="right"
                    android:padding="7dip"
                    android:singleLine="true"
                    style="@style/VehEditText" />
            </TableRow>
        <!--  Signature -->
            <TableRow
                android:background="@drawable/my_profile_multitext_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_span="2">
                    <TextView
                        style="@style/BoldText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vehicle Picture"
                        android:padding="7dp" />
                    <Button
                        android:id="@+id/btn_pict_id"
                        android:background="@drawable/rounded_stroke_selector"
                        android:text="Take"
                        android:layout_width="100.0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        style="@style/ButtonText" />
                <!-- android:background="@drawable/action_item_btn"   android:layout_marginLeft="20dp" android:textStyle="normal|bold" -->
                </RelativeLayout>
            </TableRow>
            <TableRow
                android:layout_marginBottom="10dip"
                android:background="@drawable/my_profile_multitext_bottom">
            <!--<LinearLayout
                    android:id="@+id/ll_cur_signature"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:layout_span="2"
                    android:layout_marginBottom="0.0dp" />-->
                <ImageView
                    android:id="@+id/veh_img_id"
                    android:background="@drawable/action_item_bkg_transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="120dip"
                    android:minWidth="120dip"
                    android:layout_gravity="center_horizontal" />
            </TableRow>
        </TableLayout>
    </ScrollView>
    </LinearLayout>
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/bottom_toolbar"
        android:minHeight="60dp"
        android:gravity="center">
        <ImageButton
            android:id="@+id/button_vehicle_cancel"
            android:src="@drawable/ic_cancel"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/action_item_bkg_transparent"
            android:onClick="CancelBtn"
            android:layout_weight="1" />
       
        <ImageButton
            android:id="@+id/new_veh_id"
            android:src="@drawable/ic_save"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="DoneBtn" 
            android:background="@drawable/action_item_bkg_transparent" />
    </LinearLayout>
</LinearLayout>


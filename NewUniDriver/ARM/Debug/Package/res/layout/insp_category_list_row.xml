<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:background="@drawable/inspection_item_selector">
    <TextView
        android:id="@+id/category_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/txt_barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightgrey"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingRight="5dp" />
        <TextView
            android:layout_column="0"
            android:id="@+id/category_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txt_barcode"
            android:layout_marginRight="35dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/textcolor" />
        <LinearLayout
            android:layout_column="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/img_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_qr"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical" />
            <ImageView
                android:id="@+id/img_cleared_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cleared"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="gone" />
            <CheckBox
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chk_category"
                android:focusable="false"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:button="@drawable/cb_background"
                android:scaleX="1.0"
                android:scaleY="1.0" />
        <!-- android:button="@drawable/cb_background" -->
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


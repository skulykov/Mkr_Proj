<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mydialog_shape" >

    <!-- android:background = "@drawable/mydialog_shape" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:orientation="horizontal" >
         
         <TextView
	        android:id="@+id/myDlgTitle"
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_weight="1"
	        
	        android:background="@drawable/rounded_text_title"
	        android:ems="10"
	        android:gravity="center"
	        android:text="+++"
	        android:textColor="@android:color/white"
	        android:textSize="20dp" />
         <Button
            android:id="@+id/dlg_button_ok"
            android:layout_width="60dp"
            android:background="@drawable/rounded_text_title"
            android:layout_height="60dp"
             android:layout_marginTop="12dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:textColor="@android:color/white"
	        android:textSize="28dp"
	        
            android:text="X" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/list_view_set_destination" />

        <Button
            android:id="@+id/dlg_button_dest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="1dp"
	        
            android:text="Set as destination" />
		
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="left"
            android:src="@drawable/list_view_directions_to_here" />

        <Button
            android:id="@+id/dlg_button_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="1dp"
	        
	        android:text="Show route to here" />
		
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_layout"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_gravity="left"
            android:src="@drawable/list_activities_favorites" />

        <Button
            android:id="@+id/dlg_button_favor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="1dp"
	        
            android:text="Add to my favorites" />
		
    </LinearLayout>
     

</LinearLayout>

<!--  android:background="@drawable/button_effect_background" -->